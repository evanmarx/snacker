<pre> 
	<%= params %>
</pre> 

<form action="<%= snacks_path %>" method="post">
	<input type="hidden" name="snack[traceback_url]" value="<%= params[:url] %>">
	<input type="hidden" name="snack[content_type]" value="<%= params[:type] %>">

	<% if params[:type] == "image" %>
		<input type="hidden" name="snack[source_url]" value="<%= params[:srcUrl] %>">
	<% elsif params[:type] == "link" %>
		<input type="hidden" name="snack[source_url]" value="<%= params[:linkUrl] %>">
	<% elsif params[:type] == "text" %>
		<input type="hidden" name="snack[selected_text]" value="<%= params[:selectionText].encode('UTF-8', 'binary', invalid: :replace, undef: :replace, replace: "").force_encoding('UTF-8') %>">
	<% end %>

	<h1><%= params[:type].capitalize %></h1>

	<% if params[:type] == "image" %>
		<p>Preview</p>
		<img src="<%= params[:srcUrl] %>" height="200px" width="200px">
	<% end %> 

	<br>

	<select name="snack[trail_id]">
		<% @trails.each do |trail| %>
		<option value="<%= trail.id %>" <%= "selected" if @trails.first == trail %>><%= trail.query %></option>
		<% end %> 
	</select> 

	<br>

	<input type="submit" name="commit" value="Snack!">
</form> 


